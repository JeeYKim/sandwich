<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 로그인 SQL -->
<mapper namespace="login">

<select id="loginSuccess" parameterType="hashmap" resultType="hashmap">
    <![CDATA[
		SELECT * FROM MEMBER2 WHERE MEMBER_ID = #{MEMBER_ID}
	]]>
</select>

<!-- 아이디 찾기 -->
<select id="idFind" parameterType="hashmap" resultType="hashmap">
  <![CDATA[
      select * from member2 where member_name = #{member_name} and member_email = #{member_email}
  ]]>
</select>
	
<!-- 비밀번호 찾기 -->
<select id="pwFind" parameterType="hashmap" resultType="hashmap">
  <![CDATA[
	select * from member2 WHERE upper(member_id) LIKE '%'||upper(#{member_id})||'%' 
	and member_email = #{member_email}
  ]]>
		
</select>

<!-- 이메일로 조지기 -->
<select id="Search" parameterType="hashmap" resultType="string">
  <![CDATA[
	select * from member2 WHERE member_email = #{Member_email}
	
  ]]>
</select>

</mapper>